{
  "compilerOptions": {
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "target": "es2017",
    "moduleResolution": "node",
    "outDir": ".",
    "baseUrl": "src",
    "strict": false,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "alwaysStrict": true,
    "types": ["screeps", "lodash", "node", "jest"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "test"]
}
